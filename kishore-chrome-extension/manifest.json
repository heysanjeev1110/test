{
  "manifest_version": 3,
  "name": "Kishore Kumar Music & Webpage Summarizer",
  "version": "1.0",
  "description": "Play Kishore Kumar songs from YouTube and summarize the current webpage.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
